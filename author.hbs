{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}


<span itemscope itemtype="http://schema.org/BlogPosting">
            <div class="post-header" style="background:url({{author.cover}});background-size:cover;">
                <span class="table-span">
                <span style="padding-top: 4%;padding-bottom: 2.5%;">
                    <img src="{{author.image}}" style="height: 100px;border-radius: 50%;">
                    <h1 style="color:white;margin-top: -2px;"><a href="{{url}}">{{author.name}}</a></h1>
                    <p style="color:white;margin-top:-25px;">{{{author.bio}}}</p>
                    <ul>
                    <li><a href="{{author.website}}" class="author-btn"><i class="ion-earth"></i> Website</a></li>
                    <li><a href="{{author.website}}/rss" class="author-btn"><i class="ion-person-add"></i> Subscribe to this author</a></li>
                    <li><a href="" class="author-btn"><i class="ion-coffee"></i> Buy Us A Coffee</a></li>
                        </ul>
                    
                </span>
                </span>
            </div>
        <section id="post-container" role='main' class="main-section hide-post">
            <div class="grid-container grid-720">
               <br>
                <a class="heading-small">Made Possible By:</a>
                <br>
                <section class="heading-small-border"></section>
                    <center>
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- Responsiver banner -->
                        <ins class="adsbygoogle"
                             style="display:block;max-width:600px;"
                             data-ad-client="ca-pub-7004039348107787"
                             data-ad-slot="9147249750"
                             data-ad-format="auto"></ins>
                        <script>
                        (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </center>
                <br><br><br>
            {{! The tag below includes the post loop - partials/post-loop.hbs }}
            {{> "post-loop"}}
            </div>
        </section>
  

<script type="text/javascript">
$(document).scroll(function() {
  var dHeight = $('.post-header').height();
  if (dHeight >= $(this).scrollTop()) {
    $('.navbar').css('background', 'rgba(42, 106, 244, ' + $(this).scrollTop() / dHeight * 1.08 + ')');
  }
});
</script>

