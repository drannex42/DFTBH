{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}



        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}
 <span itemscope itemtype="http://schema.org/BlogPosting">
            <div class="post-header" style="background:url({{image}});background-size:cover;">
                <span class="table-span">
                <span>
                    <h1 itemprop="name"><a style="color:white;" href="{{url}}">{{{title}}}</a></h1>
                        {{#author}}
                          <!--- <img class="author-image" src="{{image}}" alt="{{name}}"> -->
                            <span class="author-info">By <a href="{{url}}">{{name}}</a>
                        {{/author}}
                        {{tags separator=" , " prefix="in "}}
                            </span>
                         <!-- <span class="author-info hide-on-mobile" style="float:right;">&nbsp;read</span> 
                          <span class="author-info post-reading-time " style="float:right;"></span> 
                          -->
                </span>
                </span>
            </div>



    <section id="post-container" role='main' class="main-section hide-post">
        <div class="grid-container grid-720">

        <article class="post post-page-post" id="{{id}}">
          <div class="wrapper">
              <br><br>
              <section class="post">
                  {{content}}
              </section>
              <section class="post-page-share">
                <ul>
                  <span class="date-posted">
                    <li><i class="ion-ios-calendar-outline"></i> <time itemprop="datePublished" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></li>
                  </span>
                  <span class="share-icons">
                    <li class="share-title">Share on:</li>
                    <li><a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="ion-social-twitter"></i></a></li>
                    <li><a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="ion-social-facebook"></i></a></li>
                    <li><a href="https://plus.google.com/share?url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="ion-social-googleplus"></i></a></li>
                  </span>
                </ul>
              </section>
              <footer >
              {{#if tags}}
                <section class="post-page-tags hide-on-desktop hide-on-tablet">
                  <small>Tags</small>
                  <p>{{tags separator=" , "}}</p>
                </section>
                {{/if}}
                
                {{! Everything inside the #author tags pulls data from the author }}
                {{#author}}
                <section class="post-page-author">
                  <small>About the author</small>
                  <div class="author-wrapper" itemprop="author" itemscope itemtype="http://schema.org/Person">
                    <ul>
                      {{#if image}}
                      <li><a href="{{url}}"><img src="{{image}}" alt="{{name}}"></a></li>
                        <li>
                      {{else}}
                        <li style="margin-left:0;" >
                      {{/if}}
                      
                      <h3 rel="author" itemprop="url name"><a href="{{url}}">{{name}}</a></h3>
                      {{#if website}}
                        <p><a href="{{url}}"><i class="ion-plus"></i> View more posts from this author</a> &nbsp; <a href="{{website}}" target="_blank"><i class="ion-home" style="font-size:;"></i> Website</a> &nbsp;</p>
                      {{/if}}
                      {{#if bio}}
                        <p>{{{bio}}}</p>
                      {{else}}
                        <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                      {{/if}}
                      </li>
                    </ul>
                  </div>
                </section>
                {{/author}}
                  
                  
                <div id="fb-root"></div>
                    <script>(function(d, s, id) {
                      var js, fjs = d.getElementsByTagName(s)[0];
                      if (d.getElementById(id)) return;
                      js = d.createElement(s); js.id = id;
                      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.0";
                      fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));</script>
                    <div class="fb-comments"
                         data-href="{{url absolute="true"}}"
                         data-numposts="10"
                         data-width="100%"
                         data-colorscheme="light">
                  </div>
                  
              </footer>  
          </div>
        </article>
        </div>
    </section>
    
</span>
 

<script type="text/javascript">
$(document).scroll(function() {
  var dHeight = $(this).height()-$(window).height();
  if (dHeight >= $(this).scrollTop()) {
    $('.navbar').css('background', 'rgba(0,97,204,' + $(this).scrollTop() / dHeight * 2 + ')');
  }
});
</script>

{{/post}}

